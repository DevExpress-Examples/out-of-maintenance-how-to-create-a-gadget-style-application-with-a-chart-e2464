<Window x:Class="WpfChartGadget.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:dxc="http://schemas.devexpress.com/winfx/2008/xaml/charts" 
        Title="MainWindow" Height="200" Width="300" Loaded="Window_Loaded"
        AllowsTransparency="True" WindowStyle="None" Background="Transparent" Topmost="True"
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        MouseDoubleClick="Window_MouseDoubleClick">
    <Grid>
        <dxc:ChartControl Name="chartControl1" Margin="20" Background="LightBlue">
            <dxc:ChartControl.Effect>
                <DropShadowEffect ShadowDepth="0" Color="Yellow" BlurRadius="20" />
            </dxc:ChartControl.Effect>
            <dxc:ChartControl.Diagram>
                <dxc:XYDiagram2D Margin="-15,-15,-10,-15">
                    <dxc:XYDiagram2D.AxisX>
                        <dxc:AxisX2D GridSpacing="1" />
                    </dxc:XYDiagram2D.AxisX>
                    <dxc:XYDiagram2D.Series>
                        <dxc:BarSideBySideSeries2D />
                    </dxc:XYDiagram2D.Series>
                </dxc:XYDiagram2D>
            </dxc:ChartControl.Diagram>
        </dxc:ChartControl>
    </Grid>
</Window>
